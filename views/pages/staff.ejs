<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- include('../partials/header') -%>
  </head>
  <body>

    <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
      <!-- Brand -->
      <a class="navbar-brand" href="/">KingsRoyale</a>

      <!-- Links -->
      <ul class="navbar-nav">
        <li class="nav-item active">
          <a class="nav-link" href="/staff">Staff</a>
        </li>

        <!-- Dropdown -->
        <li class="nav-item dropdown">
          <a class="nav-link dropdown-toggle" href="#" id="navbardrop" data-toggle="dropdown">
            Tasks
          </a>
          <div class="dropdown-menu">
            <a class="dropdown-item" href="/tasks/designer">Designer</a>
            <a class="dropdown-item" href="/tasks/developer">Developer</a>
            <a class="dropdown-item" href="/tasks/artist">Artist</a>
          </div>
        </li>
      </ul>
    </nav>

    <div class="container mx-auto mt-5">
      <div class="card">
        <div class="card-header">
          STAFF
        </div>
        <div class="card-body">

          <div class="row justify-content-center">

            <div class="col-sm-6 mt-3">
              <div class="p-3 border-executive">
                <h1 class="title-staff mb-1 pb-2">Flaymed</h1>
                Rank: EXECUTIVE
              </div>
            </div>

          </div>

        </div>
      </div>
    </div>

    <button class="btn btn-success ml-5 mt-5 mx-auto" data-toggle="modal" data-target="#newStaff">New Staff</button>

    <!-- The Modal -->
    <div class="modal fade" id="newStaff">
      <div class="modal-dialog">
        <div class="modal-content">

          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">New Staff Member</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>

          <!-- Modal body -->
          <div class="modal-body">
            <form method="post" action="/createUser">
              <input class="input" name="user[name]" placeholder="Username">
              <input class="input" name="user[pass]" placeholder="Password">
              <input class="input" name="user[rank]" placeholder="Rank">
              <input class="btn btn-success ml-2" type="submit" value="Create">
            </form>
          </div>

          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
          </div>

        </div>
      </div>
    </div>

  </body>

  <%- include('../partials/footer') -%>
  <script>

  window.addEventListener("load", function(event) {
    getStaff();
  })

  </script>

</html>
